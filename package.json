{
  "name": "atomdoc-cli",
  "description": "A CLI interface for AtomDoc",
  "version": "1.1.1",
  "bin": {
    "atomdoc": "./bin/index.js"
  },
  "main": "./lib/index.js",
  "scripts": {
    "test": "ava",
    "coverage": "nyc npm test",
    "lint": "eslint .",
    "prettier": "prettier \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|graphql|mdx)\"",
    "format": "npm run prettier -- --write",
    "codecov": "nyc report -r lcovonly && codecov",
    "checkdocs": "atomdoc \"+(bin|lib)**/*.js\"",
    "validate": "npm run lint && npm run coverage && npm run checkdocs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GarthDB/atomdoc-cli.git"
  },
  "keywords": [
    "AtomDoc",
    "cli",
    "javascript",
    "documentation"
  ],
  "author": "Garth Braithwaite <garthdb@gmail.com> (http://garthdb.com)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/GarthDB/atomdoc-cli/issues"
  },
  "homepage": "https://github.com/GarthDB/atomdoc-cli#readme",
  "eslintConfig": {
    "extends": "garthdb"
  },
  "ava": {
    "files": [
      "test/*.js"
    ],
    "babel": false
  },
  "nyc": {
    "include": [
      "lib/*.js",
      "bin/index.js"
    ]
  },
  "dependencies": {
    "atomdoc": "^1.0.6",
    "chalk": "^2.4.2",
    "cliff": "^0.1.10",
    "commander": "^2.20.0",
    "falafel": "^2.0.0",
    "fs-readfile-promise": "^3.0.1",
    "glob": "^7.1.4",
    "pkginfo": "^0.4.1",
    "resolve": "^1.11.0"
  },
  "devDependencies": {
    "ava": "^1.4.1",
    "codecov": "^3.5.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "nixt": "^0.5.1",
    "nyc": "^14.1.1",
    "prettier": "^1.17.1"
  }
}
