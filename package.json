{
  "name": "atomdoc-cli",
  "description": "A CLI interface for AtomDoc",
  "version": "1.1.0",
  "bin": {
    "atomdoc": "./bin/index.js"
  },
  "main": "./lib/index.js",
  "scripts": {
    "prepublish": "npm run compile",
    "compile": "esbuild ./src/**/*.js '--define:process.env.NODE_ENV=\"production\"' --minify --outdir=./",
    "test": "ava",
    "coverage": "nyc npm test",
    "checkdocs": "atomdoc src",
    "validate": "npm run coverage && npm run checkdocs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GarthDB/atomdoc-cli.git"
  },
  "keywords": [
    "AtomDoc",
    "cli",
    "javascript",
    "documentation"
  ],
  "author": "Garth Braithwaite <garthdb@gmail.com> (http://garthdb.com)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/GarthDB/atomdoc-cli/issues"
  },
  "homepage": "https://github.com/GarthDB/atomdoc-cli#readme",
  "eslintConfig": {
    "extends": "garthdb"
  },
  "ava": {
    "babel": false,
    "files": [
      "test/*.js"
    ]
  },
  "nyc": {
    "include": [
      "src/lib/*.js",
      "bin/index.js"
    ]
  },
  "dependencies": {
    "acorn": "^8.0.3",
    "atomdoc": "^1.2.0",
    "chalk": "^4.1.0",
    "cliff": "^0.1.10",
    "commander": "^6.1.0",
    "falafel": "^2.2.4",
    "glob": "^7.1.6",
    "pkginfo": "^0.4.1",
    "resolve": "^1.17.0"
  },
  "devDependencies": {
    "ava": "^3.13.0",
    "codecov": "^3.7.2",
    "esbuild": "^0.7.8",
    "nixt": "^0.5.1",
    "nyc": "^15.1.0"
  }
}
